{
    "name": "wapmorgan/php-code-fixer",
    "description": "A program that finds usage of deprecated functions, variables and ini directives in your php code.",
    "type": "package",
    "license": "BSD-3-Clause",
    "require": {
        "docopt/docopt": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "wapmorgan\\PhpCodeFixer\\": "src/"
        }
    },
    "bin": ["bin/phpcf"],
    "extra": {
        "phar-builder": {
            "compression": "BZip2",
            "name": "phpcf.phar",
            "output-dir": "./",
            "entry-point": "bin/phpcf",
            "include": ["bin"],
            "events": {
                "command.package.start" : "git describe --tags > bin/version.txt",
                "command.package.end": "chmod +x phpcf.phar"
            }
        }
    }
}
